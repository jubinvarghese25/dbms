use universitydb;
create table s3(
RollNo int primary key,
Name varchar(100),
DOB date,
Department varchar(100)
);
insert into s3(RollNo,Name,DOB,Department)
values
(101,'Raj','2005-10-10','CSE'),
(102,'Ram','2006-11-11','MTS'),
(103,'Rak','2006-02-09','CDS');
select * from s3;
update s3
set Department='LAB' 
where RollNo=103;
select * from s3;
select * from course;
update course
set Credits=2
where Title like '%System%'
limit 5;
select * from course;
select * from Enrollment;
delete from Enrollment 
where RollNo=1002;
select * from Enrollment;
delete from Enrollment
where Grade='B'
limit 3;

alter table student
add PhoneNo int;

select * from student;
alter table Course modify Title varchar(150);
alter table student rename column DOB to DateOFBirth;

alter table student
drop column Department;


select * from course order by Credits desc;

select S.Name as StudentName,C.Title as CourseName,E.Grade
from student S
join Enrollment E on S.RollNo=E.RollNo
join Course C on E.CourseID=C.CourseID;
